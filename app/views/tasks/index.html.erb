<h1 class="text-center my-4">Task List</h1>
<div class="text-end mb-3">
  <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr class="priority-<%= task.priority %>">
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.due_date&.strftime("%Y-%m-%d") %></td>
      <td><%= task.completed ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to 'View', task_path(task), class: 'btn btn-sm btn-success' %>
        <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-warning' %>
        <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>